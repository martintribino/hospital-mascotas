
body
  margin 0
  word-break break-word

app-header
  background-color primaryBack

app-navbar, .container
  max-width lg
  margin 0 auto

nav
  display flex
  width 100%

.svg-back
  width 40px
  height 40px
  @media screen and (max-width: sm)
    width 25px
    height 25px
    margin-right 5px

.circle-back
  fill #8ab5c3

app-login, app-signup, app-not-found, app-loading-page, app-home, app-navbar, app-header,
app-services, app-edit-user, app-edit-perfil, app-create-mascota, app-validate-veterinarios,
app-mascotas, app-form-mascota, app-qrcode, app-events, app-file-uploader, app-pet-search
  display flex
  width 100%
  justify-content center

app-avatar1, app-avatar2, app-avatar3, app-avatar4, app-avatar5, app-avatar6
  display flex
  width 100%
  justify-content center

app-services, app-qrcode
  flex-direction column
  text-align center

app-contact, app-mascotas
  flex-direction column

app-home
  flex-direction row
  align-items center
  flex-wrap wrap

::-webkit-scrollbar
  width 15px

::-webkit-scrollbar-track
  box-shadow inset 0 0 5px white
  border-radius 7px

::-webkit-scrollbar-thumb
  background rgba(primaryBack, 0.75)
  border-radius 7px

::-webkit-scrollbar-thumb:hover
  background rgba(primaryBack, 0.9)

app-file-uploader
  max-width 250px
  margin 0 auto
  flex-direction column
  .mat-chip-list
    .mat-chip
      &.mat-standard-chip
        height auto
        label
          overflow auto
          height auto
          max-height 40px
  .mat-form-field-wrapper
    padding-bottom 0
    .mat-form-field-flex
      display flex
      padding-top 0
      .mat-form-field-infix
        display flex
        justify-content flex-start
        align-items center
        align-content center
        padding 0.2em
        border-top none
        width auto
        border 2px solid rgba(primaryBack, 0.75)
      &:hover
        height auto
        background none
    .mat-form-field-underline
      height 0
      background none
      .mat-form-field-ripple
        height 0
        background none
        &:hover
          height 0
          background none

.spinner-page
  display flex
  margin 2em auto
  justify-content center

.cdk-overlay-pane
  .mat-dialog-container
    padding 1em
    h4
      display flex
      justify-content center
      margin 0 0 1em 0

form
  display flex
  width 100%
  margin 0 auto
  max-width 500px
  font-size 1.1em
  background formBackColor
  box-shadow 1px 1px 25px rgba(0,0,0,0.35)
  border-radius 10px
  line-height 1.7em
  &.search-form
    background white
    box-shadow none
    line-height 1.3em
    font-size 1em
    max-width none
    width 75%
    padding 0 3%
    justify-content flex-end
    align-items center
  &.stepper-form
    background white
  &.estandar
    box-shadow none
    line-height 1.3em
  &.ficha
    flex-wrap wrap
  .mat-hint
    display flex
    justify-content center
    &.success-response
      display flex
      justify-content center
      color successColor
  .form-group
    display flex
    width 100%
    padding 0
    justify-content center
    margin 0
    border 3px solid transparent
    border-radius 5px
    h4
      display flex
      justify-content center
      margin-bottom 0
    .mat-error
      display flex
      width 100%
      justify-content center
      margin 0.4em auto
    .mat-checkbox
    .mat-form-field
      display flex
      justify-content center
      width 60%
      margin 2% auto
      .mat-datepicker-toggle
        svg
          fill primaryBack
      .mat-error
        display flex
        width 100%
        justify-content flex-start

.container
  display: flex;
  width: 100%;
  justify-content: center;
  .mat-paginator
    margin 0 auto
    width 75%
    padding 0 3%

.mat-table
  margin 0 auto
  width 75%
  padding 1% 3%
  flex-wrap wrap
  align-self flex-start
  .mat-row
    cursor pointer
  .descripcion-cell
    display flex
    flex-direction column
    span
      margin 0.2em auto
  .mat-card-avatar
    width 50px
    border-radius: 50%
    margin 0.4em auto
  button
    background-color transparent
    border none
    box-shadow none
    .mat-icon
      color primaryBack
      &:hover
        color rgba(primaryBack, 0.75)

.mat-menu-content
  button
    background-color transparent
    border none
    box-shadow none
    .mat-icon
      color primaryBack
      margin-right 5px
      &:hover
        color rgba(primaryBack, 0.75)

button 
  box-shadow inset 0 1px 0 0 formBorderColor
  background-color primaryBack
  display flex
  justify-content center
  align-items center
  cursor pointer
  color white
  padding 0.2em 0.6em
  text-decoration none
  font 1em Arial,Helvetica,sans-serif
  margin 5% auto
  &.mat-menu-item
    margin 0 auto
  &.nav-icon
    background-color transparent
    color primaryBack
    display flex
    align-items center
    box-shadow none
    border-radius 50%
    border-color primaryBack
    font-size 1.6em
    padding 0.2em
    border-style double
    &:hover
      background-color primaryBack
      color white
    &:disabled
      background-color transparent
      border-color disabledStrong
      color disabledStrong
      cursor default
  &.attach-icon
    background-color primaryBack
    color white
    box-shadow none
    border-radius 50%
    border-color primaryBack
    padding 0.4em
    margin 0.2em 0.2em
  &.qricon
    background-color transparent
    color primaryBack
    box-shadow none
    border-radius 50%
    border-color primaryBack
  &.fab-button
    display flex
    align-items center
    box-shadow none
    border none
    background-color transparent
    color primaryBack
    padding 0
    font-size 1.6em
    .mat-icon
      border none
      box-shadow none
      font-size 1.6em
      height 100%
      width 100%
    &:hover
      color rgba(primaryBack, 0.75)
    &.top-right
      top 10%
      right 5%
  &:disabled
    background-color disabledColor
    color primaryBack

.mat-focused.mat-form-field
  &.ng-valid
    color successColor
    .mat-hint
      color successColor
    .mat-form-field-underline
      background-color successColor

.mat-form-field.mat-focused
  &.ng-valid
    .mat-form-field-ripple
      background-color successColor
    .mat-form-field-label
      color successColor

mat-form-field
  &.ng-valid
    &.ng-touched
      color successColor
      .mat-hint
        color successColor
      .mat-form-field-label
        color successColor
      .mat-form-field-underline
        background-color successColor

.desktop
  display flex

.mobile
  display none

.mat-form-field-wrapper
  width 100%

.no-mascota-card
  min-width 50%

.mat-cell
  a
    cursor pointer
    color primaryBack

a
  cursor pointer
  color primaryBack
  &:hover
    text-decoration underline

//general single classes
.top-margin
  margin-top normalM

.native-select
  color primaryBack
  border-color primaryBack
  padding 0.2em 0.4em
  font-size 1em
  background-color white

@media screen and (max-width: lm)
  .title-navbar
    display none
  .mat-table
    padding 1%
    width 90%
    .mat-cell
      &:first-of-type
        padding-left 12px
      &:last-of-type
        padding-right 12px

@media screen and (max-width: sm)
  .cdk-overlay-pane
    .panelClass
      max-width 100%
  .no-mascota-card
    min-width 100%
  .mat-table
    font-size 0.9em
    margin 0 auto
    width 95%
    padding 1%
    flex-wrap wrap
    align-self flex-start
    .mat-cell
      &:first-of-type
        padding-left 6px
      &:last-of-type
        padding-right 6px
    .mat-card-avatar
      width 50px
  .mat-paginator
    font-size 0.9em
    margin 1em auto
    width 100%
    padding 0
  .desktop
    display none
  .mobile
    display flex
  app-home
    flex-direction column
  .container
    form
      margin 0 auto
      font-size 1em
      background secondaryBack
      box-shadow 1px 1px 20px rgba(0,0,0,0.35)
      border-radius 8px
      line-height: 1.5em;
      .form-group
        margin 0px
      &.stepper-form
        background white
@media screen and (max-width: xs)
  body
    .mobile-hidden
      display none