@import "../../../assets/styles/vars"

#notallowed
  display flex
  width 100%
  .notallowed
    position absolute
    left 60%
    top 54%
    max-width 520px
    width 100%
    line-height 1.4
    -webkit-transform translate(-50%, -50%)
    -ms-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    a
      font-family 'Poppins', sans-serif
      display inline-block
      font-weight 700
      border-radius 15px
      text-decoration none
      color #57a3f8
    h2
      font-family 'Poppins', sans-serif
      font-size 28px
      font-weight 400
      text-transform uppercase
      color #222
      margin-top 12px
      margin-bottom 15px
    .notallowed-404
      position absolute
      left 0
      top 0
      height 150px
      width 200px
      z-index -1
      h1
        font-family 'Poppins', sans-serif
        font-size 238px
        font-weight 700
        margin 0px
        color #e3e3e3
        text-transform uppercase
        letter-spacing 7px
        position absolute
        left 60%
        top 60%
        -webkit-transform translate(-50% , -50%)
        -ms-transform translate(-50% , -50%)
        transform translate(-50% , -65%)
@media (max-width: md)
  #notallowed
    .notallowed
      width 50%
      left 60%
      top 62%
      h2
        font-size 1.8em
      .notallowed-404
        width 100%
        height 100px
        h1
          font-size 18em
          -webkit-transform translate(-65%, -60%)
          -ms-transform translate(-65%, -60%)
          transform translate(-65%, -60%)
@media (max-width: sm)
  #notallowed
    .notallowed
      top 55%
      h2
        font-size 1.2em
      .notallowed-404
        height 100px
        h1
          font-size 10em
