@import "../../../assets/styles/vars"

.edita-comp
  display flex
  width 100%
  flex-direction column
  align-items center
  button
    margin 2% auto

.mat-radio-group
  display flex
  flex-direction row
  justify-content center
  flex-wrap wrap
  width 100%

.mat-radio-button
  display flex
  flex-direction row
  justify-content center
  align-items center
  margin-bottom 1em
  width 33%
  @media screen and (max-width: sm)
    width 50%

:host
  ::ng-deep
    .circle-back
      fill #008cbb20
    .svg-back
      width 115px
      height 115px
      @media screen and (max-width: sm)
        width 100px
        height 100px
      &:hover
        .circle-back
          fill primaryBack
    .mat-radio-checked
      .circle-back
        fill primaryBack
    .mat-radio-container
      display none
    .mat-radio-label-content.mat-radio-label-before
      padding-right 0
    .mat-radio-label
      width auto

