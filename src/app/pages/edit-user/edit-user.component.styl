@import "../../../assets/styles/vars"

.editu-comp
  display flex
  flex-direction column
  justify-content center
  width 100%
  h3
    text-align center

form
  flex-direction column
  width 100%
  .form-group
    border none
    padding-top 4%
    margin 0
    button
      margin 4% auto
  .row-group
    display flex
    flex-direction row
    width 100%
    border none
  .mat-form-field
    flex-direction row

@media screen and (max-width: sm)
  form
    border none
    box-shadow none
    .row-group
      display flex
      flex-direction column
      width 100%
      border none
