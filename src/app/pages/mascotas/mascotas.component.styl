@import "../../../assets/styles/vars"

.no-mascota-card
  display flex
  flex-direction column
  align-items center
  min-width 50%
  color primaryBack

.loading-cell
  display flex
  justify-content center
  padding 1em 0

.descripcion-cell
  padding 0
  width 100%
  flex-direction: row;
  span
    display flex
    width 100%
    justify-content center
    align-items center
    align-content center
    flex-direction column
    &:first-of-type
      padding-left 24px
    &:last-of-type
      padding-right 24px

@media screen and (max-width: sm)
  .no-mascota-card
    min-width 100%